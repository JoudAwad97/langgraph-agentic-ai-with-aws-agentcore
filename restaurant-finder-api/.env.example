# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AgentCore Configuration
GATEWAY_URL=https://your-gateway-url.gateway.bedrock-agentcore.us-east-2.amazonaws.com/mcp
GATEWAY_ID=your-gateway-id
RUNTIME_ID=your-runtime-id
MEMORY_ID=your-memory-id

# Feature Flags
ENABLE_BROWSER_SEARCH=true
GUARDRAIL_ENABLED=true

# Observability Configuration
# Enable/disable OpenTelemetry observability (CloudWatch GenAI Observability)
AGENT_OBSERVABILITY_ENABLED=true

# Service name for tracing attribution (appears in CloudWatch)
OTEL_SERVICE_NAME=restaurant-finder-agent

# CloudWatch log group for observability data (optional - defaults to /aws/bedrock-agentcore/runtimes/{service_name})
OTEL_LOG_GROUP=

# =============================================
# OpenTelemetry Environment Variables
# =============================================
# These are set automatically when running with opentelemetry-instrument
# For non-runtime hosted agents, set these manually:
#
# OTEL_PYTHON_DISTRO=aws_distro
# OTEL_PYTHON_CONFIGURATOR=aws_configurator
# OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# OTEL_TRACES_EXPORTER=otlp
# OTEL_RESOURCE_ATTRIBUTES=service.name=restaurant-finder-agent,aws.log.group.names=/aws/bedrock-agentcore/runtimes/restaurant-finder-agent,cloud.region=us-east-2
# OTEL_EXPORTER_OTLP_LOGS_HEADERS=x-aws-log-group=/aws/bedrock-agentcore/runtimes/restaurant-finder-agent,x-aws-log-stream=runtime-logs,x-aws-metric-namespace=bedrock-agentcore
